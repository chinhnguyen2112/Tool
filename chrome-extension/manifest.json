{
  "manifest_version": 3,
  "name": "Google Index Checker",
  "version": "2.0",
  "description": "Kiểm tra index Google cho các URL và gửi kết quả về trang CI3",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bridge.js"],
      "run_at": "document_start"
    }
  ]
}